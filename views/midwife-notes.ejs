<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Midwife Notes</title>
    <link rel="stylesheet" href="css/style.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- FontAwesome Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

</head>
<body>
    <div class="container">
        <!-- Midwife Notes Section -->
        <h3>Midwife Notes</h3>

        <!-- Only show the form if patientId is available -->
        <% if (patientId) { %>
        <form id="midwifeNotesForm" action="/add-midwife-notes/<%= patientId %>" method="POST" novalidate>

            <!-- Date -->
            <div class="mb-3">
                <label for="noteDate" class="form-label">Date</label>
                <input type="date" class="form-control" id="noteDate" name="noteDate" required>
                <div class="invalid-feedback">Please enter the date.</div>
            </div>

            <!-- Time -->
            <div class="mb-3">
                <label for="noteTime" class="form-label">Time</label>
                <input type="time" class="form-control" id="noteTime" name="noteTime" required>
                <div class="invalid-feedback">Please enter the time.</div>
            </div>

            <!-- Note Type -->
            <div class="mb-3">
                <label for="noteType" class="form-label">Note Type</label>
                <input type="text" class="form-control" id="noteType" name="noteType" placeholder="e.g., Routine Check-up, Emergency" required>
                <div class="invalid-feedback">Please enter the note type.</div>
            </div>

            <!-- Summary Section -->
            <h5>Summary</h5>
            <div class="mb-3">
                <label for="generalWellbeing" class="form-label">General Wellbeing</label>
                <input type="text" class="form-control" id="generalWellbeing" name="generalWellbeing" placeholder="e.g., Stable, Good" required>
                <div class="invalid-feedback">Please enter the general wellbeing.</div>
            </div>
            <div class="mb-3">
                <label for="bloodPressureStatus" class="form-label">Blood Pressure Status</label>
                <input type="text" class="form-control" id="bloodPressureStatus" name="bloodPressureStatus" placeholder="e.g., Normal, High" required>
                <div class="invalid-feedback">Please enter the blood pressure status.</div>
            </div>
            <div class="mb-3">
                <label for="fetalMovements" class="form-label">Fetal Movements</label>
                <input type="text" class="form-control" id="fetalMovements" name="fetalMovements" placeholder="e.g., Active, Decreased" required>
                <div class="invalid-feedback">Please enter fetal movements.</div>
            </div>
            <div class="mb-3">
                <label for="contractionsStatus" class="form-label">Contractions Status</label>
                <input type="text" class="form-control" id="contractionsStatus" name="contractionsStatus" placeholder="e.g., Frequent, Mild" required>
                <div class="invalid-feedback">Please enter the contractions status.</div>
            </div>
            <div class="mb-3">
                <label for="medicationsGiven" class="form-label">Medications</label>
                <input type="text" class="form-control" id="medicationsGiven" name="medicationsGiven" placeholder="e.g., Oxytocin, Antibiotics" required>
                <div class="invalid-feedback">Please enter medications given.</div>
            </div>
            <div class="mb-3">
                <label for="activityStatus" class="form-label">Activity Status</label>
                <input type="text" class="form-control" id="activityStatus" name="activityStatus" placeholder="e.g., Resting, Active" required>
                <div class="invalid-feedback">Please enter activity status.</div>
            </div>

            <!-- Plan Section -->
            <h5>Plan</h5>
            <div class="mb-3">
                <label for="nextSteps" class="form-label">Next Steps</label>
                <input type="text" class="form-control" id="nextSteps" name="nextSteps" placeholder="e.g., Continue monitoring, Increase medication" required>
                <div class="invalid-feedback">Please enter the next steps.</div>
            </div>
            <div class="mb-3">
                <label for="expectedDeliveryType" class="form-label">Expected Delivery Type</label>
                <input type="text" class="form-control" id="expectedDeliveryType" name="expectedDeliveryType" placeholder="e.g., Vaginal, C-section" required>
                <div class="invalid-feedback">Please enter the expected delivery type.</div>
            </div>
            <div class="mb-3">
                <label for="deliveryLikelihood" class="form-label">Likelihood of Delivery</label>
                <input type="text" class="form-control" id="deliveryLikelihood" name="deliveryLikelihood" placeholder="e.g., Imminent, Unlikely" required>
                <div class="invalid-feedback">Please enter the likelihood of delivery.</div>
            </div>
            <div class="mb-3">
                <label for="monitoringPlan" class="form-label">Monitoring Plan</label>
                <textarea class="form-control" id="monitoringPlan" name="monitoringPlan" rows="3" placeholder="e.g., Monitor contractions every 30 minutes" required></textarea>
                <div class="invalid-feedback">Please enter the monitoring plan.</div>
            </div>

            <!-- Button Row for Navigation -->
            <div class="button-row">
                <!-- Back Button: Navigates to the previous service -->
                <button id="backButton" type="button" class="btn btn-secondary">Back</button>

                <!-- Save & Continue Button: Saves current data and navigates to the next service -->
                <button id="saveContinueButton" type="submit" class="btn btn-primary">Save & Continue</button>
            </div>

        </form>
        <% } else { %>
            <!-- Message displayed if no patient is selected -->
            <p>No patient selected. Please register a patient first.</p>
        <% } %>
    </div>

    <script>
        // Wait until the DOM content is fully loaded before executing
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('midwifeNotesForm');

            // Add custom form validation logic
            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault();  // Prevent submission if invalid
                    form.classList.add('was-validated');
                } else {
                    alert('Midwife notes saved successfully!');
                }
            }, false);

            // Handle back button navigation
            document.getElementById('backButton').addEventListener('click', function() {
                window.history.back();  // Navigate to the previous section
            });
        });
    </script>
</body>
</html>
