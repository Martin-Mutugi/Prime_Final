<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Laboratory Results</title>
    <link rel="stylesheet" href="css/style.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- FontAwesome Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

</head>
<body>
    <div class="container">
        <!-- Laboratory Results Section -->
        <h3>Laboratory Results</h3>

        <!-- Only show the form if patientId is available -->
        <% if (patientId) { %>
        <form id="laboratoryResultsForm" action="/add-laboratory-results/<%= patientId %>" method="POST" novalidate>

            <!-- Blood Tests Section -->
            <h5>Blood Tests</h5>
            <div class="mb-3">
                <label for="hemoglobin" class="form-label">Hemoglobin (g/dL)</label>
                <input type="number" class="form-control" id="hemoglobin" name="hemoglobin" placeholder="e.g., 13.5" required>
                <div class="invalid-feedback">Please enter the hemoglobin level.</div>
            </div>
            <div class="mb-3">
                <label for="bloodType" class="form-label">Blood Type</label>
                <input type="text" class="form-control" id="bloodType" name="bloodType" placeholder="e.g., O+" required>
                <div class="invalid-feedback">Please enter the blood type.</div>
            </div>
            <div class="mb-3">
                <label for="hivStatus" class="form-label">HIV Status</label>
                <input type="text" class="form-control" id="hivStatus" name="hivStatus" placeholder="e.g., Negative" required>
                <div class="invalid-feedback">Please enter the HIV status.</div>
            </div>
            <div class="mb-3">
                <label for="syphilisStatus" class="form-label">Syphilis Status</label>
                <input type="text" class="form-control" id="syphilisStatus" name="syphilisStatus" placeholder="e.g., Negative" required>
                <div class="invalid-feedback">Please enter the syphilis status.</div>
            </div>

            <!-- Urinalysis Section -->
            <h5>Urinalysis</h5>
            <div class="mb-3">
                <label for="proteinLevel" class="form-label">Protein Level</label>
                <input type="text" class="form-control" id="proteinLevel" name="proteinLevel" placeholder="e.g., Negative" required>
                <div class="invalid-feedback">Please enter the protein level.</div>
            </div>
            <div class="mb-3">
                <label for="glucoseLevel" class="form-label">Glucose Level</label>
                <input type="text" class="form-control" id="glucoseLevel" name="glucoseLevel" placeholder="e.g., Normal" required>
                <div class="invalid-feedback">Please enter the glucose level.</div>
            </div>

            <!-- Button Row for Navigation -->
            <div class="button-row">
                <!-- Back Button: Navigates to the previous service -->
                <button id="backButton" type="button" class="btn btn-secondary">Back</button>

                <!-- Save & Continue Button: Saves current data and navigates to the next service -->
                <button id="saveContinueButton" type="submit" class="btn btn-primary">Save & Continue</button>
            </div>

        </form>
        <% } else { %>
            <!-- Message displayed if no patient is selected -->
            <p>No patient selected. Please register a patient first.</p>
        <% } %>
    </div>

    <script>
        // Wait until the DOM content is fully loaded before executing
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('laboratoryResultsForm');

            // Add custom form validation logic
            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault();  // Prevent submission if invalid
                    form.classList.add('was-validated');
                } else {
                    alert('Laboratory Results saved successfully!');
                }
            }, false);

            // Handle back button navigation
            document.getElementById('backButton').addEventListener('click', function() {
                window.history.back();  // Navigate to the previous section
            });
        });
    </script>
</body>
</html>
