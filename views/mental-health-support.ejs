<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mental Health and Support</title>
    <link rel="stylesheet" href="css/style.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- FontAwesome Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

</head>
<body>
    <div class="container">
        <!-- Mental Health and Support Section -->
        <h3>Mental Health and Support</h3>

        <!-- Only show the form if patientId is available -->
        <% if (patientId) { %>
        <form id="mentalHealthSupportForm" action="/add-mental-health-support/<%= patientId %>" method="POST" novalidate>

            <!-- Mental Health Screening -->
            <h5>Mental Health Screening</h5>
            <div class="mb-3">
                <label class="form-label">Anxiety or Depression</label>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="previousEpisodes" name="previousEpisodes" value="true">
                    <label class="form-check-label" for="previousEpisodes">Previous Episodes</label>
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="currentEpisodes" name="currentEpisodes" value="true">
                    <label class="form-check-label" for="currentEpisodes">Current Episodes</label>
                </div>
            </div>

            <!-- Stress Levels -->
            <div class="mb-3">
                <label for="stressLevelBefore" class="form-label">Stress Level Before Pregnancy</label>
                <input type="text" class="form-control" id="stressLevelBefore" name="stressLevelBefore" placeholder="e.g., low, moderate, high" required>
                <div class="invalid-feedback">Please enter the stress level before pregnancy.</div>
            </div>

            <div class="mb-3">
                <label for="currentStressLevel" class="form-label">Current Stress Level</label>
                <input type="text" class="form-control" id="currentStressLevel" name="currentStressLevel" placeholder="e.g., low, moderate, high" required>
                <div class="invalid-feedback">Please enter the current stress level.</div>
            </div>

            <!-- Support from Relatives -->
            <h5>Support from Relatives</h5>
            <div class="mb-3">
                <label for="supportAvailable" class="form-label">Is Support Available?</label>
                <div>
                    <input type="checkbox" id="supportAvailableYes" name="supportAvailable" value="true"> Yes
                    <input type="checkbox" id="supportAvailableNo" name="supportAvailable" value="false"> No
                </div>
            </div>

            <div class="mb-3">
                <label for="livingSituationSupport" class="form-label">Living Situation</label>
                <input type="text" class="form-control" id="livingSituationSupport" name="livingSituationSupport" placeholder="e.g., living with relatives, alone" required>
                <div class="invalid-feedback">Please enter the living situation.</div>
            </div>

            <!-- Button Row for Navigation -->
            <div class="button-row">
                <!-- Back Button: Navigates to the previous service -->
                <button id="backButton" type="button" class="btn btn-secondary">Back</button>

                <!-- Save & Continue Button: Saves current data and navigates to the next service -->
                <button id="saveContinueButton" type="submit" class="btn btn-primary">Save & Continue</button>
            </div>
        </form>
        <% } else { %>
            <!-- Message displayed if no patient is selected -->
            <p>No patient selected. Please register a patient first.</p>
        <% } %>
    </div>

    <script>
        // Wait until the DOM content is fully loaded before executing
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('mentalHealthSupportForm');

            // Add custom form validation logic
            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault();  // Prevent submission if invalid
                    form.classList.add('was-validated');
                } else {
                    alert('Mental Health and Support saved successfully!');
                }
            }, false);

            // Handle back button navigation
            document.getElementById('backButton').addEventListener('click', function() {
                window.history.back();  // Navigate to the previous section
            });
        });
    </script>
</body>
</html>
