<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Health Examination</title>
    <link rel="stylesheet" href="css/style.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- FontAwesome Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

</head>
<body>
    <div class="container">
        <!-- Health Examination Section -->
        <h3>Health Examination</h3>

        <!-- Only show the form if patientId is available -->
        <% if (patientId) { %>
        <form id="healthExaminationForm" action="/add-health-examination/<%= patientId %>" method="POST" novalidate>

            <!-- Height (cm) -->
            <div class="mb-3">
                <label for="heightCm" class="form-label">Height (cm)</label>
                <input type="number" class="form-control" id="heightCm" name="heightCm" placeholder="Enter height in cm" required>
                <div class="invalid-feedback">Please enter height in cm.</div>
            </div>

            <!-- Weight (kg) -->
            <div class="mb-3">
                <label for="weightKg" class="form-label">Weight (kg)</label>
                <input type="number" class="form-control" id="weightKg" name="weightKg" placeholder="Enter weight in kg" required>
                <div class="invalid-feedback">Please enter weight in kg.</div>
            </div>

            <!-- BMI -->
            <div class="mb-3">
                <label for="bmi" class="form-label">Body Mass Index (BMI)</label>
                <input type="number" class="form-control" id="bmi" name="bmi" placeholder="Enter BMI" required>
                <div class="invalid-feedback">Please enter BMI.</div>
            </div>

            <!-- Blood Pressure -->
            <div class="mb-3">
                <label for="bloodPressure" class="form-label">Blood Pressure</label>
                <div class="row">
                    <div class="col">
                        <input type="number" class="form-control" id="systolic" name="systolic" placeholder="Systolic" required>
                        <div class="invalid-feedback">Please enter systolic pressure.</div>
                    </div>
                    <div class="col">
                        <input type="number" class="form-control" id="diastolic" name="diastolic" placeholder="Diastolic" required>
                        <div class="invalid-feedback">Please enter diastolic pressure.</div>
                    </div>
                </div>
            </div>

            <!-- Fundal Height (cm) -->
            <div class="mb-3">
                <label for="fundalHeightCm" class="form-label">Fundal Height (cm)</label>
                <input type="number" class="form-control" id="fundalHeightCm" name="fundalHeightCm" placeholder="Enter fundal height in cm" required>
                <div class="invalid-feedback">Please enter fundal height in cm.</div>
            </div>

            <!-- Fetal Heartbeat (bpm) -->
            <div class="mb-3">
                <label for="fetalHeartbeat" class="form-label">Fetal Heartbeat (bpm)</label>
                <input type="number" class="form-control" id="fetalHeartbeat" name="fetalHeartbeat" placeholder="Enter fetal heartbeat in bpm" required>
                <div class="invalid-feedback">Please enter fetal heartbeat.</div>
            </div>

            <!-- Blood Glucose (mmol/L) -->
            <div class="mb-3">
                <label for="bloodGlucose" class="form-label">Blood Glucose (mmol/L)</label>
                <input type="number" step="0.01" class="form-control" id="bloodGlucose" name="bloodGlucose" placeholder="Enter blood glucose in mmol/L" required>
                <div class="invalid-feedback">Please enter blood glucose level.</div>
            </div>

            <!-- Urine Protein -->
            <div class="mb-3">
                <label for="urineProtein" class="form-label">Urine Protein</label>
                <input type="text" class="form-control" id="urineProtein" name="urineProtein" placeholder="e.g., Negative, Trace, +1" required>
                <div class="invalid-feedback">Please enter urine protein level.</div>
            </div>

            <!-- Urine Glucose -->
            <div class="mb-3">
                <label for="urineGlucose" class="form-label">Urine Glucose</label>
                <input type="text" class="form-control" id="urineGlucose" name="urineGlucose" placeholder="e.g., Negative, Trace, +1" required>
                <div class="invalid-feedback">Please enter urine glucose level.</div>
            </div>

            <!-- Button Row for Navigation -->
            <div class="button-row">
                <!-- Back Button: Navigates to the previous service -->
                <button id="backButton" type="button" class="btn btn-secondary">Back</button>

                <!-- Save & Continue Button: Saves current data and navigates to the next service -->
                <button id="saveContinueButton" type="submit" class="btn btn-primary">Save & Continue</button>
            </div>
        </form>
        <% } else { %>
            <!-- Message displayed if no patient is selected -->
            <p>No patient selected. Please register a patient first.</p>
        <% } %>
    </div>

    <script>
        // Wait until the DOM content is fully loaded before executing
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('healthExaminationForm');

            // Add custom form validation logic
            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault();  // Prevent submission if invalid
                    form.classList.add('was-validated');
                } else {
                    alert('Health examination saved successfully!');
                }
            }, false);

            // Handle back button navigation
            document.getElementById('backButton').addEventListener('click', function() {
                window.history.back();  // Navigate to the previous section
            });
        });
    </script>
</body>
</html>
