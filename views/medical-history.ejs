<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Medical History and Risk Factors</title>
    <link rel="stylesheet" href="css/style.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- FontAwesome Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>

        /* General styling for the body */
body {
    margin: 0;
    font-family: 'Arial', sans-serif;
    background-color: #f8f9fa;
    padding: 20px;
}

/* Form container */
form {
    background-color: #e0f7da;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    max-width: 900px;
    margin: 20px auto;
}

/* Two-column layout */
form {
    display: grid;
    grid-template-columns: 1fr 1fr; /* Two equal columns */
    grid-gap: 20px; /* Space between columns */
}

/* Full width elements */
form h5, form button {
    grid-column: 1 / span 2; /* Spans both columns */
}

/* Label Styling */
label {
    font-weight: bold;
    margin-bottom: 5px;
    display: block;
}

/* Yes/No Radio Button Groups */
.radio-group {
    display: flex;
    justify-content: flex-start;
    gap: 20px; /* Space between Yes and No */
    align-items: center;
}

.radio-group label {
    font-weight: normal;
}

/* Input Styling */
input[type="text"], input[type="number"], textarea {
    width: 100%;
    padding: 8px;
    margin-top: 5px;
    border: 1px solid #ced4da;
    border-radius: 5px;
    box-sizing: border-box;
    background-color: #fff;
}

/* Button Styling */
button {
    background-color: #007bff;
    color: white;
    padding: 10px 15px;
    border: none;
    font-size: 16px;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

button:hover {
    background-color: #0056b3;
}

/* Responsive design for smaller screens */
@media (max-width: 768px) {
    form {
        grid-template-columns: 1fr; /* Switch to single column for small screens */
    }
}

    </style>
</head>
<body>
    <div class="container">
        <!-- Medical History and Risk Factors Section -->
        <h3>Medical History and Risk Factors</h3>
        <form action="/add-medical-history/<%= patientId %>" method="POST" id="medicalHistoryForm" novalidate>

            <!-- Cardiac & Circulatory Diseases -->
            <h5>Cardiac & Circulatory Diseases</h5>
            <div class="mb-3">
                <label class="form-label">Heart Disease</label><br>
                <input type="radio" id="heartDiseaseYes" name="heartDisease" value="yes" required>
                <label for="heartDiseaseYes">Yes</label>
                <input type="radio" id="heartDiseaseNo" name="heartDisease" value="no">
                <label for="heartDiseaseNo">No</label>
            </div>
            <div class="mb-3">
                <label class="form-label">Thrombosis</label><br>
                <input type="radio" id="thrombosisYes" name="thrombosis" value="yes" required>
                <label for="thrombosisYes">Yes</label>
                <input type="radio" id="thrombosisNo" name="thrombosis" value="no">
                <label for="thrombosisNo">No</label>
            </div>
            <div class="mb-3">
                <label class="form-label">High Blood Pressure</label><br>
                <input type="radio" id="highBloodPressureYes" name="highBloodPressure" value="yes" required>
                <label for="highBloodPressureYes">Yes</label>
                <input type="radio" id="highBloodPressureNo" name="highBloodPressure" value="no">
                <label for="highBloodPressureNo">No</label>
            </div>

            <!-- Endocrine Diseases -->
            <h5>Endocrine Diseases</h5>
            <div class="mb-3">
                <label class="form-label">Thyroid Disease</label><br>
                <input type="radio" id="thyroidDiseaseYes" name="thyroidDisease" value="yes" required>
                <label for="thyroidDiseaseYes">Yes</label>
                <input type="radio" id="thyroidDiseaseNo" name="thyroidDisease" value="no">
                <label for="thyroidDiseaseNo">No</label>
            </div>
            <div class="mb-3">
                <label class="form-label">Diabetes</label><br>
                <input type="radio" id="diabetesYes" name="diabetes" value="yes" required>
                <label for="diabetesYes">Yes</label>
                <input type="radio" id="diabetesNo" name="diabetes" value="no">
                <label for="diabetesNo">No</label>
            </div>

            <!-- Autoimmune Diseases -->
            <h5>Autoimmune Diseases</h5>
            <div class="mb-3">
                <label class="form-label">Lupus (SLE)</label><br>
                <input type="radio" id="lupusSleYes" name="lupusSle" value="yes" required>
                <label for="lupusSleYes">Yes</label>
                <input type="radio" id="lupusSleNo" name="lupusSle" value="no">
                <label for="lupusSleNo">No</label>
            </div>
            <div class="mb-3">
                <label class="form-label">Rheumatoid Arthritis</label><br>
                <input type="radio" id="rheumatoidArthritisYes" name="rheumatoidArthritis" value="yes" required>
                <label for="rheumatoidArthritisYes">Yes</label>
                <input type="radio" id="rheumatoidArthritisNo" name="rheumatoidArthritis" value="no">
                <label for="rheumatoidArthritisNo">No</label>
            </div>

            <!-- Neurological & Psychiatric Diseases -->
            <h5>Neurological & Psychiatric Diseases</h5>
            <div class="mb-3">
                <label class="form-label">Epilepsy</label><br>
                <input type="radio" id="epilepsyYes" name="epilepsy" value="yes" required>
                <label for="epilepsyYes">Yes</label>
                <input type="radio" id="epilepsyNo" name="epilepsy" value="no">
                <label for="epilepsyNo">No</label>
            </div>
            <div class="mb-3">
                <label class="form-label">Psychiatric Disease</label><br>
                <input type="radio" id="psychiatricDiseaseYes" name="psychiatricDisease" value="yes" required>
                <label for="psychiatricDiseaseYes">Yes</label>
                <input type="radio" id="psychiatricDiseaseNo" name="psychiatricDisease" value="no">
                <label for="psychiatricDiseaseNo">No</label>
            </div>

            <!-- Genitourinary & Reproductive Health -->
            <h5>Genitourinary & Reproductive Health</h5>
            <div class="mb-3">
                <label class="form-label">Urinary Tract Infections</label><br>
                <input type="radio" id="urinaryTractInfectionsYes" name="urinaryTractInfections" value="yes" required>
                <label for="urinaryTractInfectionsYes">Yes</label>
                <input type="radio" id="urinaryTractInfectionsNo" name="urinaryTractInfections" value="no">
                <label for="urinaryTractInfectionsNo">No</label>
            </div>
            <div class="mb-3">
                <label class="form-label">Kidney Disease</label><br>
                <input type="radio" id="kidneyDiseaseYes" name="kidneyDisease" value="yes" required>
                <label for="kidneyDiseaseYes">Yes</label>
                <input type="radio" id="kidneyDiseaseNo" name="kidneyDisease" value="no">
                <label for="kidneyDiseaseNo">No</label>
            </div>
            <div class="mb-3">
                <label class="form-label">Gonorrhea</label><br>
                <input type="radio" id="gonorrheaYes" name="gonorrhea" value="yes" required>
                <label for="gonorrheaYes">Yes</label>
                <input type="radio" id="gonorrheaNo" name="gonorrhea" value="no">
                <label for="gonorrheaNo">No</label>
            </div>
            <div class="mb-3">
                <label class="form-label">Syphilis</label><br>
                <input type="radio" id="syphilisYes" name="syphilis" value="yes" required>
                <label for="syphilisYes">Yes</label>
                <input type="radio" id="syphilisNo" name="syphilis" value="no">
                <label for="syphilisNo">No</label>
            </div>

            <!-- Family & Hereditary Diseases -->
            <h5>Family & Hereditary Diseases</h5>
            <div class="mb-3">
                <label for="familyHereditaryDiseases" class="form-label">Family Hereditary Diseases</label>
                <textarea class="form-control" id="familyHereditaryDiseases" name="familyHereditaryDiseases" rows="3" placeholder="Describe any known hereditary diseases"></textarea>
            </div>

            <!-- Allergies -->
            <h5>Allergies</h5>
            <div class="mb-3">
                <label class="form-label">Medication Allergies</label><br>
                <input type="radio" id="medicationAllergiesYes" name="medicationAllergies" value="yes" required>
                <label for="medicationAllergiesYes">Yes</label>
                <input type="radio" id="medicationAllergiesNo" name="medicationAllergies" value="no">
                <label for="medicationAllergiesNo">No</label>
            </div>
            <div class="mb-3">
                <label for="otherAllergies" class="form-label">Other Allergies</label>
                <textarea class="form-control" id="otherAllergies" name="otherAllergies" rows="3" placeholder="List other known allergies"></textarea>
            </div>

            <!-- Lifestyle Factors (Smoking, Alcohol, Drugs) -->
            <h5>Lifestyle Factors</h5>
            <div class="mb-3">
                <label class="form-label">Smoking</label><br>
                <input type="radio" id="smokingYes" name="smoking" value="yes" required>
                <label for="smokingYes">Yes</label>
                <input type="radio" id="smokingNo" name="smoking" value="no">
                <label for="smokingNo">No</label>
            </div>
            <div class="mb-3">
                <label class="form-label">Alcohol Use</label><br>
                <input type="radio" id="alcoholUseYes" name="alcoholUse" value="yes" required>
                <label for="alcoholUseYes">Yes</label>
                <input type="radio" id="alcoholUseNo" name="alcoholUse" value="no">
                <label for="alcoholUseNo">No</label>
            </div>
            <div class="mb-3">
                <label class="form-label">Drug Use</label><br>
                <input type="radio" id="drugUseYes" name="drugUse" value="yes" required>
                <label for="drugUseYes">Yes</label>
                <input type="radio" id="drugUseNo" name="drugUse" value="no">
                <label for="drugUseNo">No</label>
            </div>

            <!-- Submit Button -->
            <div class="button-row">
                <button id="saveContinueButton" type="submit" class="btn btn-primary">Save & Continue</button>
            </div>

        </form>
    </div>

    <script>
        // Wait until the DOM content is fully loaded before executing
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('medicalHistoryForm');

            // Add custom form validation logic
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();  // Prevent submission if invalid
                    form.classList.add('was-validated');
                } else {
                    alert('Medical history saved successfully!');
                }
            }, false);
        });
    </script>
</body>
</html>
